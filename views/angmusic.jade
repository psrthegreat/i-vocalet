extends common

block extraheads
	script(src='/javascripts/musicController.js')
	script(src='/javascripts/audiosynth.js')
	link(rel='stylesheet', href='/stylesheets/accompaniment.css')

block content
	.container(ng-app='musicApp', ng-controller='musicJSONController')
		.row.row-centered
			.row.col-xs-6.col-centered#mobileContainer
				.row
					br
					.col-md-6
						h4 Vocalet
					.col-md-6
						.input-group
							input.form-control(type='text', id='searchSong', ng-model='searchForm.title')
							span.input-group-btn
								button.btn.btn-default(type='button', ng-click='searchForm.submitTheForm()') Go!
						br
					.row
					pre(ng-bind-html='explicitlyTrustedHtml')#lyrics
				.row.grayDiv
					h4 {{query}}
						.pull-right
							button.btn.btn-default(ng-click='stopPlayingChord();') Stop
				.row.row-centered#chordDiv
					div(ng-repeat='chord in chords').col-xs-2.col-centered.chordCol
						button(ng-click='repeatPlayingChord(chord);').chord {{chord}}
				.row.row-centered
					.col-xs-12
						
				.row
					.pull-left
						button.btn(ng-click='decreaseTempo(100);') Decrease Tempo
					.pull-right
						button.btn(ng-click='increaseTempo(100);') Increase Tempo



